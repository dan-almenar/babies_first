<PaintWindow>:
    name: 'paint_window'
    FloatLayout:
        padding: 5
        spacing: 5
        pos: 0, 40
        Image:
            source: 'media/black_background.png'
            size: self.size
            allow_stretch: True
            keep_ratio: False
            PaintWidget:
                id: painter
                pos: 0, 40
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: painter.pos
                        size: painter.size

    BoxLayout:
        Button:
            id: paint_back
            size_hint_y: None
            pos: 0, 0
            height: 40
            text: 'Back to Main Window'
            font_size: '20sp'
            on_release:
                painter.clear_canvas()
                app.root.current = 'main_window'
                root.manager.transition.direction = 'right'
        Button:
            id: clear_canvas
            size_hint_y: None
            pos: 0, 0
            height: 40
            text: 'Clear'
            font_size: '20sp'
            on_press:
                painter.clear_canvas()

