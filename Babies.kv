#: import random random
WindowManager:
    MainWindow:
    NumerosWindow:
    ColoresWindow:
    PaintWindow:
    AnimalesWindow:

<MainWindow>:
    name: 'main_window'
    BoxLayout:
        id: main_boxlayout
        orientation: 'vertical'
        padding: 10
        spacing: 5
        GridLayout:
            spacing: 5
            orientation: 'horizontal'
            cols: 2
            ImageButton:
                id: main_numbers_btn
                source: 'media/numbers.jpg'
                allow_stretch: True
                keep_ratio: False
                size: self.size
                on_release:
                    app.root.current = 'numeros_window'
                    root.manager.transition.direction = 'left'
            ImageButton:
                id: main_colores_btn
                source: 'media/colores.png'
                allow_stretch: True
                keep_ratio: False
                size: self.size
                on_release:
                    app.root.current = 'colores_window'
                    root.manager.transition.direction = 'left'
            ImageButton:
                id: main_animales_btn
                source: 'media/animals/animals.png'
                allow_stretch: True
                keep_ratio: False
                size: self.size
                on_release:
                    app.root.current = 'animales_window'
                    root.manager.transition.direction = 'left'
            ImageButton:
                id: main_fingerpainting_btn
                source: 'media/fingerpainting.png'
                allow_stretch: True
                keep_ratio: False
                size: self.size
                on_release:
                    app.root.current = 'paint_window'
                    root.manager.transition.direction = 'left'
        Button:
            id: exit_btn
            size_hint_y: None
            height: 40
            size: self.size
            text: 'Exit'
            font_size: '20sp'
            on_release: exit()

<NumerosWindow>:
    name: 'numeros_window'
    BoxLayout:
        id: num_boxlayout
        spacing: 5
        padding: 5
        Image:
            spacing: 5
            id: num_image
            source: root.set_numeros_image()
            pos: self.pos
            allow_stretch: True
            keep_ratio: False
            size: self.size
        Button:
            spacing: 5
            id: contar_btn
            size: self.size
            text: contar_btn.text
            font_size: 200
            text: root.num_btn_txt()
            background_color: (random.random(), random.random(), random.random(), 1)
            on_release:
                root.contar()
                root.set_numeros_image()
                self.background_color = (random.random(), random.random(), random.random(), 1)
    Button:
        spacing: 5
        id: numeros_back
        text: 'Back to Main Window'
        size_hint_y: None
        height: 40
        font_size: '20sp'
        on_release:
            app.root.current = 'main_window'
            root.manager.transition.direction = 'right'
            root.num_btn_txt()
            contar_btn.background_color = (random.random(), random.random(), random.random(), 1)
            num_image.source = 'media/numbers/01.png'


